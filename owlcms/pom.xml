									<goal>single</goal>
								</goals>
								<configuration>
									<!--
									<skipAssembly>${noInstaller}</skipAssembly> -->
									<finalName>${project.artifactId}</finalName>
									<appendAssemblyId>false</appendAssemblyId>
									<descriptors>
										<descriptor>src/main/assembly/zip.xml</descriptor>
									</descriptors>
