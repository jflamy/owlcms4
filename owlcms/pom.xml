						<image>adoptopenjdk:11-jre-openj9</image>
					</from>
					<to>
						<image>owlcms</image>
						<tags>prerelease</tags>
					</to>
					<container>
						<ports>
							<port>8080</port>
						</ports>
						<jvmFlags>
							<jvmFlag>-XX:HotswapAgent=fatjar</jvmFlag>
						</jvmFlags>
