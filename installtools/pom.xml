<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>app.owlcms</groupId>
    <version>1.17.0</version>
    <artifactId>installtools</artifactId>
    <packaging>pom</packaging>

    <!-- note that you must use mvn command line to deploy, does not work with embedded eclipse maven -->
    <!-- for example: mvn -Pproduction -s c:\Dev\.m2\settings.xml assembly:single@zip-jre assembly:single@zip-innosetup package deploy -->
    <distributionManagement>
        <repository>
            <id>owlcms-maven-repo</id>
            <url>https://maven.jflamy.dev/releases</url>
        </repository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <!-- Production mode is activated using -Pproduction -->
            <id>production</id>
            <properties>
                <!-- hard-coded paths -->
                <!-- jre location for bundling with windows installer -->
                <jre.directory>C:\Dev\Java\jbrjre-17.0.1b164.8</jre.directory>
            </properties>

            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-compiler-plugin</artifactId>
                            <version>3.8.1</version>
                            <configuration>
                                <release>11</release>
                            </configuration>
                        </plugin>
                        <plugin>
                            <artifactId>maven-assembly-plugin</artifactId>
                            <version>3.3.0</version>
                            <executions>
                                <execution>
                                    <id>zip-innosetup</id>
                                    <phase>package</phase>
                                    <goals>
                                        <goal>single</goal>
                                    </goals>
                                    <configuration>
                                        <finalName>innosetup</finalName>
                                        <appendAssemblyId>false</appendAssemblyId>
                                        <descriptors>
                                            <descriptor>src/main/assembly/zip-innosetup.xml</descriptor>
                                        </descriptors>
                                        <attach>false</attach>
                                    </configuration>
                                </execution>
                                <execution>
                                    <id>zip-jre</id>
                                    <phase>package</phase>
                                    <goals>
                                        <goal>single</goal>
                                    </goals>
                                    <configuration>
                                        <finalName>jre</finalName>
                                        <appendAssemblyId>false</appendAssemblyId>
                                        <descriptors>
                                            <descriptor>src/main/assembly/zip-jre.xml</descriptor>
                                        </descriptors>
                                        <attach>false</attach>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>3.0.0-M1</version>
                        <executions>
                            <execution>
                                <id>install-jre</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>target/jre.zip</file>
                                    <groupId>app.owlcms</groupId>
                                    <artifactId>installtools</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>jre</classifier>
                                    <packaging>zip</packaging>
                                </configuration>
                            </execution>
                            <execution>
                                <id>install-innosetup</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>install-file</goal>
                                </goals>
                                <configuration>
                                    <file>target/innosetup.zip</file>
                                    <groupId>app.owlcms</groupId>
                                    <artifactId>installtools</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>innosetup</classifier>
                                    <packaging>zip</packaging>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- note that you must use mvn command line to deploy, does not work with embedded eclipse maven -->
                    <!-- for example: mvn -s c:\Dev\.m2\settings.xml -Dmaven.test.skip=true deploy -->
                    <plugin>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>3.0.0-M1</version>
                        <executions>
                            <execution>
                                <id>default-deploy</id>
                                <phase>none</phase>
                            </execution>
                            <execution>
                                <id>deploy-innosetup</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>target/innosetup.zip</file>
                                    <repositoryId>owlcms-maven-repo</repositoryId>
                                    <url>https://maven.jflamy.dev/releases</url>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>zip</packaging>
                                    <classifier>innosetup</classifier>
                                    <generatePom>false</generatePom>
                                    <!-- pomFile>target/installtools/deployment-pom.xml</pomFile> -->
                                </configuration>
                            </execution>
                            <execution>
                                <id>deploy-jre</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>deploy-file</goal>
                                </goals>
                                <configuration>
                                    <file>target/jre.zip</file>
                                    <repositoryId>owlcms-maven-repo</repositoryId>
                                    <url>https://maven.jflamy.dev/releases</url>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <packaging>zip</packaging>
                                    <classifier>jre</classifier>
                                    <generatePom>false</generatePom>
                                    <!-- pomFile>target/installtools/deployment-pom.xml</pomFile> -->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>noInstaller</id>
            <properties>
                <noInstaller>true</noInstaller>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-deploy-plugin</artifactId>
                        <version>3.0.0-M1</version>
                        <executions>
                            <execution>
                                <id>default-deploy</id>
                                <phase>none</phase>
                            </execution>
                            <execution>
                                <id>deploy-file</id>
                                <phase>none</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
